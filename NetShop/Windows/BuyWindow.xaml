<Window x:Class="NetShop.BuyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetShop"
        mc:Ignorable="d"
        Title="BuyWindow" Height="500" Width="850"
        Loaded="Window_Loaded">
    <Grid>
        <TreeView Margin="0,0,500,0" Name="treeCategory">
        </TreeView>
        <TextBlock x:Name="tbItem" FontSize="20" HorizontalAlignment="Left" Margin="349,34,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="293" Width="409" />
        <Button x:Name="bAdding" IsEnabled="False" Content="Добавить в корзину" HorizontalAlignment="Left" Margin="424,390,0,0" VerticalAlignment="Top" Height="35" Width="130" Click="Button_Click_Adding"/>
        <Button x:Name="bBuy" IsEnabled="False" Content="Купить" HorizontalAlignment="Left" Margin="700,390,0,0" VerticalAlignment="Top" Height="35" Width="90" Click="Button_Click_Buy"/>
    </Grid>
</Window>