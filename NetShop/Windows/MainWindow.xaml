<Window x:Class="NetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetShop"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="430">
    <Grid>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Margin="32,53,0,0" Text="Введите логин" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" Height="29" />
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="32,117,0,0" VerticalAlignment="Top" Width="202" Height="29" />
        <Button Content="Авторизоваться" HorizontalAlignment="Left" Margin="272,53,0,0" VerticalAlignment="Top" Height="29" Width="103" Click="AthButton_Click" />
        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="258,117,0,0" VerticalAlignment="Top" Height="29" Width="131" Click="RegButton_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="33,96,0,0" Text="Введите пароль:" TextWrapping="Wrap" VerticalAlignment="Top" />
    </Grid>
</Window>